<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/trailers_container"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.kryptkode.cyberman.popularmovies2.ui.TrailersActivity"
    tools:showIn="@layout/activity_trailers">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/trailers_activity_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


    <TextView
        android:id="@+id/trailers_no_trailers_text_view"
        style="@style/OtherLabelsStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/no_trailers"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:visibility="invisible"
        tools:textColor="@android:color/black"/>
</RelativeLayout>
